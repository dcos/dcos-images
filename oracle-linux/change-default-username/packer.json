{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "region":         "us-west-2"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "instance_type": "m4.xlarge",
      "source_ami": "ami-dcc58ea4",
      "region": "us-west-2",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "oracle",
      "ami_name": "oracle-linux-test-6",
      "ami_description": "oracle linux 7.4 test-3",
      "ami_regions": [
        "us-west-2"
      ],
      "ami_groups": "all",
      "associate_public_ip_address": true,
      "ebs_optimized": true,
      "ena_support": true,
      "sriov_support": true,
      "user_data_file": "./defaults.cfg",
      "encrypt_boot": "false",
      "force_deregister": true
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "./defaults.cfg",
      "destination": "/tmp/defaults.cfg"
    },
    {
      "type": "shell",
      "inline": [
        "sudo mv /tmp/defaults.cfg /etc/cloud/cloud.cfg.d/defaults.cfg"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "output": "dcos_cloud_images_ami.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ]
}
